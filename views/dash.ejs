                                <div class="cont-tipos">
                                    <h3 id="title">Caracteristicas de la quemadura</h3>
                                    <div class="quemaduras">
                                        <div class="quemadura"  style="background-color: #F5E5FF;">
                                            <p class="titulo">Primer Grado</p>
                                            <p class="desc">Epidermis Dañada</p>
                                            <div class="check">
                                                <p class="caract">Enrojecimiento, dolor, hinchazón</p>
                                                <input type="radio" name="grado" id="grado1" value="1">
                                            </div>
                                        </div>
                                        <div class="quemadura" style="background-color: #E9FFE5;">
                                            <p class="titulo">Segundo Grado</p>
                                            <p class="desc">Epidermis y parte de la dermis Dañada</p>
                                            <div class="check">
                                                <p class="caract">Enrojecimiento, dolor, hinchazón, Ampollas.</p>
                                                <input type="radio" name="grado" id="grado1" value="2">
                                            </div>
                                        </div>
                                        <div class="quemadura" style="background-color: #FFFFE5;">
                                            <p class="titulo">Segundo grado profundo</p>
                                            <p class="desc">Epidermis y dermis completa Dañada.</p>
                                            <div class="check">
                                                <p class="caract">Enrojecimiento, dolor, tono punteado rojo  blanquecino.                                                </p>
                                                <input type="radio" name="grado" id="grado1" value="2">
                                            </div>
                                        </div>
                                        <div class="quemadura" style="background-color: #FDE7EE;">
                                            <p class="titulo">Tercer Grado</p>
                                            <p class="desc">Epidermis y dermis gravemente afectadas</p>
                                            <div class="check">
                                                <p class="caract">Lesiones no dolorosas y destrucción extensa de la piel.</p>
                                                <input type="radio" name="grado" id="grado1" value="3">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="cont-botones">
                                        <button class="anterior">Anterior</button>
                                        <button class="siguiente">Siguiente</button>
                                    </div>
                                </div>
                            </div>

